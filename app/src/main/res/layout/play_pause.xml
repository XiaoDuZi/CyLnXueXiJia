<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/divider_bg"
              android:gravity="center"
              android:orientation="vertical">

    <RadioGroup
        android:layout_width="598dp"
        android:layout_height="332dp"
        android:background="@drawable/video_pause_border"
        android:gravity="center"
        android:orientation="vertical">


        <RadioButton
            android:id="@+id/textView4"
            android:layout_width="306dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:button="@null"
            android:text="上一节"/>

        <RadioButton
            android:id="@+id/textView3"
            android:layout_width="306dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:button="@null"
            android:text="下一节"/>

        <RadioButton
            android:id="@+id/textView2"
            android:layout_width="306dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:button="@null"
            android:checked="true"
            android:text="继续学习"/>

        <RadioButton
            android:id="@+id/textView"
            android:layout_width="306dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:button="@null"
            android:text="查看课件"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="282dp"
            android:layout_height="192dp"
            android:background="@drawable/class_point1"/>

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="282dp"
            android:layout_height="192dp"
            android:background="@drawable/class_point3"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="282dp"
            android:layout_height="192dp"
            android:background="@drawable/class_point2"/>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="282dp"
            android:layout_height="192dp"
            android:background="@drawable/class_point1"/>
    </LinearLayout>

</LinearLayout>
